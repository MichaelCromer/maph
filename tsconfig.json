{
    "compilerOptions": {
        "outDir": "./bld/scripts",
        "allowJs": false,
        "esModuleInterop": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "noEmitOnError": true,
        "removeComments": true,
        "lib": [ "dom", "es2018" ],
        "target": "es6",
        "module": "commonjs"
    },
    "include": [ "./src/**/*" ]
}
